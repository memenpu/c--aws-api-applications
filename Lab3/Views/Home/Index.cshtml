@model Lab3.Models.User; 
@{
    ViewData["Title"] = "Home Page";
}
<!------ Include the above in your HEAD tag ---------->
<div id="container">
    <h5>User Login</h5>
    <form asp-action="Login" method="post">
       
        <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" class="form-control" asp-for="username" id="email" aria-describedby="emailHelp" name="username" placeholder="Enter email" required>
            <small class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" asp-for="password" id="password" name="password" placeholder="Password" required>
            @if (ViewData["CredentialError"] != null)
            {
                <small class="form-text text-danger">Email or Password is Wrong! Try again.</small>
            }
        </div>
        <input type="submit" value="Log In" class="btn btn-info">
    </form>
    <h5>User Login</h5>
    <form asp-action="Register" method="post">
        <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" class="form-control"  id="email" aria-describedby="emailHelp" name="username" placeholder="Enter email" required>
            <small class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control"  id="password" name="password" placeholder="Password" required>
        </div>
        <input type="submit" value="Register" class="btn btn-info">
    </form>

</div>
